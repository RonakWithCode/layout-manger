<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Profile Image of the User Being Followed -->
    <ImageView
        android:id="@+id/followProfileImageView"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher_background"/>

    <!-- User Name Being Followed -->
    <TextView
        android:id="@+id/followUserNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/followProfileImageView"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="Username"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"/>

    <TextView
        android:layout_below="@id/followUserNameTextView"
        android:id="@+id/decTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_toEndOf="@id/followProfileImageView"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="Username"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"/>




    <!-- Follow Button -->
    <Button
        android:id="@+id/followButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Follow"
        android:textSize="@dimen/_14ssp"/>

</RelativeLayout>
